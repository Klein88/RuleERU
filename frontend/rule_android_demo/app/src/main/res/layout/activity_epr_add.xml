<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <ImageButton
        android:id="@+id/vatdialog_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/dialog_close"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/epradd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司\n名称:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="80dp"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/epradd_cname"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="@drawable/frame_black"
        android:hint="请输入公司名称"
        android:layout_marginTop="65dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/epradd_name"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/epradd_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册号:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="56dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/epradd_cregister"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="@drawable/frame_black"
        android:hint="请输入品牌注册号"
        android:layout_marginTop="145dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/epradd_register"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/epradd_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册\n国家:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/epradd_register"/>
    <HorizontalScrollView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/epradd_country"
        app:layout_constraintTop_toBottomOf="@+id/epradd_cregister"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/radiogroup_epr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:checked="false"
                    android:text="英国"
                    android:textSize="18sp"
                    android:id="@+id/vatadd_yingguo"
                    android:textColor="#000000"/>
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:checked="false"
                    android:text="德国"
                    android:textSize="18sp"
                    android:id="@+id/vatadd_deguo"
                    android:textColor="#000000"/>
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:checked="false"
                    android:text="法国"
                    android:textSize="18sp"
                    android:id="@+id/vatadd_faguo"
                    android:textColor="#000000"/>
                <RadioButton
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:checked="false"
                    android:text="意大利"
                    android:textSize="18sp"
                    android:id="@+id/vatadd_yidali"
                    android:textColor="#000000"/>
                <RadioButton
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:checked="false"
                    android:text="西班牙"
                    android:textSize="18sp"
                    android:id="@+id/vatadd_xibanya"
                    android:textColor="#000000"/>
            </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务类型:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/epradd_country"
        app:layout_constraintTop_toBottomOf="@+id/epradd_country"/>
    <TextView
        android:id="@+id/epradd_ctype"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="EPR转申报"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="142dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/epradd_country"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务提\n交次数:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="@+id/epradd_country"
        app:layout_constraintTop_toBottomOf="@+id/epradd_country"/>
    <EditText
        android:id="@+id/epradd_count"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:hint="提交次数"
        android:layout_marginTop="78dp"
        android:layout_marginStart="140dp"
        android:background="@drawable/frame_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/epradd_country"/>
    <android.widget.Button
        android:id="@+id/epradd_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="提交"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button1"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/epradd_count"/>
</androidx.constraintlayout.widget.ConstraintLayout>