<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <ImageButton
        android:id="@+id/vatdialog_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/dialog_close"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/compliance_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司\n名称:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="80dp"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/compliance_cname"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="@drawable/frame_black"
        android:hint="请填写公司名称"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/compliance_name"
        app:layout_constraintTop_toTopOf="@+id/compliance_name"
        app:layout_constraintBottom_toBottomOf="@+id/compliance_name"/>
    <TextView
        android:id="@+id/compliance_CNname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品中\n文名称:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="56dp"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/CNname"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="@drawable/frame_black"
        android:hint="请填写产品中文名"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/compliance_CNname"
        app:layout_constraintTop_toTopOf="@+id/compliance_CNname"
        app:layout_constraintBottom_toBottomOf="@+id/compliance_CNname"/>
    <TextView
        android:id="@+id/compliance_ENname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品英\n文名称:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="56dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compliance_CNname"/>
    <EditText
        android:id="@+id/ENname"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="@drawable/frame_black"
        android:hint="请填写产品英文名"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/compliance_ENname"
        app:layout_constraintTop_toTopOf="@+id/compliance_ENname"
        app:layout_constraintBottom_toBottomOf="@+id/compliance_ENname"/>
    <TextView
        android:id="@+id/compliance_doctype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件类型:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/compliance_ENname"
        app:layout_constraintTop_toBottomOf="@+id/compliance_ENname"/>
    <Spinner
        android:id="@+id/compliance_spinner"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:entries="@array/compliance_add"
        app:layout_constraintStart_toEndOf="@id/compliance_doctype"
        app:layout_constraintTop_toTopOf="@+id/compliance_doctype"
        app:layout_constraintBottom_toBottomOf="@+id/compliance_doctype"/>

    <TextView
        android:id="@+id/compliance_Processingdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="办理日期:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/compliance_doctype"
        app:layout_constraintEnd_toEndOf="@+id/compliance_doctype"/>
    <EditText
        android:id="@+id/compliance_date"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="@drawable/frame_black"
        android:hint="如2023-1-1"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/compliance_Processingdate"
        app:layout_constraintTop_toTopOf="@+id/compliance_Processingdate"
        app:layout_constraintBottom_toBottomOf="@+id/compliance_Processingdate"/>
    <android.widget.Button
        android:id="@+id/conadd_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="提交"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button1"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compliance_date"/>
</androidx.constraintlayout.widget.ConstraintLayout>