<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ConsumptionActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Tl_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_nav_back"
        app:title="合规声明"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="制造商名称"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/doc_manufacturer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请填写制造商名称"
                android:background="@drawable/frame_gray1"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司地址"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/doc_manufacturer"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/doc_address"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:hint="请填写公司地址"
                android:background="@drawable/frame_gray1"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/doc_manufacturer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授权代表"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="220dp"
                app:layout_constraintTop_toBottomOf="@+id/doc_manufacturer"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/doc_authorization"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:hint="请填写授权代表"
                android:background="@drawable/frame_gray1"
                android:layout_marginTop="40dp"
                android:layout_marginStart="220dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/doc_manufacturer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品序列号"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/doc_address"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/doc_id"
                android:layout_width="195dp"
                android:layout_height="40dp"
                android:hint="请填写产品序列号"
                android:layout_marginTop="40dp"
                android:background="@drawable/frame_gray1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_address"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="型号或类型标识"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="205dp"
                app:layout_constraintTop_toBottomOf="@+id/doc_address"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/doc_type"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:hint="请填写型号或标识"
                android:layout_marginTop="40dp"
                android:layout_marginStart="205dp"
                android:background="@drawable/frame_gray1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_address"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="责任声明"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_id"/>
            <EditText
                android:id="@+id/doc_liability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:hint="请填写责任声明"
                android:background="@drawable/frame_gray1"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_id"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品识别手段"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_liability"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/product_identify"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/frame_gray2"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_liability">
                <EditText
                    android:id="@+id/doc_means"
                    android:layout_width="170dp"
                    android:layout_height="160dp"
                    android:layout_marginStart="5dp"
                    android:background="#ffffff"
                    android:hint="填写产品识别手段"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/doc_identify"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@mipmap/upload"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指定机构的详细信息"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_identify"/>
            <EditText
                android:id="@+id/doc_institution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:hint="请填写机构信息"
                android:background="@drawable/frame_gray1"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_identify"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="遵守的相关法律和标准"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_institution"/>
            <EditText
                android:id="@+id/doc_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:hint="请填写所遵守法律与标准"
                android:background="@drawable/frame_gray1"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_institution"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名者信息"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_standard"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/doc_Signer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/frame_gray2"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_standard">
                <EditText
                    android:id="@+id/Signer_name"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="#ffffff"
                    android:hint="填写签名者姓名"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/Signer_image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@mipmap/upload"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声明签发日期"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_Signer"/>
            <TextView
                android:id="@+id/doc_date"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:text="选择签发日期"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/frame_gray1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_Signer"/>
            <android.widget.Button
                android:id="@+id/doc_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/background_button"
                android:text="选择"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_Signer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补充信息"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_date"/>
            <EditText
                android:id="@+id/doc_supplement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:hint="请填写补充信息"
                android:background="@drawable/frame_gray1"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_date"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进口商责任"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_supplement"/>
            <EditText
                android:id="@+id/doc_importer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:hint="请填写进口商责任"
                android:background="@drawable/frame_gray1"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_supplement"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="翻译要求"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_importer"/>
            <EditText
                android:id="@+id/doc_translation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请填写翻译要求"
                android:background="@drawable/frame_gray1"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_importer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品照片(可选)"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_translation"/>
            <ImageView
                android:id="@+id/doc_product"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/upload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_translation"/>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/frame_blue"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_translation">
                <ImageView
                    android:id="@+id/doc_example"
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:src="@drawable/product"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="示例"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <android.widget.Button
                android:id="@+id/doc_submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="提交"
                android:background="@drawable/background_button1"
                android:textSize="25sp"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/doc_product"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>