<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="7dp">

        <ImageView
            android:id="@+id/country_taxpay"
            android:layout_width="50dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>
        <ImageView
            android:id="@+id/vatpay_edit"
            android:background="@drawable/item_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="编辑"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/taxpay_cname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1公司"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/vatpay_edit"
            app:layout_constraintStart_toEndOf="@+id/country_taxpay"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/vat_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bdbdbd"
            app:layout_constraintTop_toBottomOf="@+id/taxpay_id"/>
        <TextView
            android:id="@+id/taxpay_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vat税号"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/vatpay_edit"
            app:layout_constraintStart_toEndOf="@+id/country_taxpay"
            app:layout_constraintTop_toBottomOf="@id/taxpay_cname"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/vat_divider"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/taxpay_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应缴税金"
                    android:textSize="18sp"
                    android:textColor="#a3a3a3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/taxpay_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="110"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/taxpay_tax"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/vat_divider1"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#bdbdbd"
                android:layout_marginTop="5dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tax_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申报类型"
                    android:textColor="#a3a3a3"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/taxpay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VAT转申报"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/tax_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/vat_divider2"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#bdbdbd"
                android:layout_marginTop="5dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tax_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缴税状态"
                    android:textColor="#a3a3a3"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/taxpay_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/tax_state"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>