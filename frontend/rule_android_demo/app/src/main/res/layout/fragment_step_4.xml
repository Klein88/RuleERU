<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺信息"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写店铺信息"
        android:textSize="18sp"
        android:layout_marginStart="7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主要销售平台"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>
    <RadioGroup
        android:id="@+id/rg_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <RadioButton
            android:id="@+id/shop_type1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/state_checked"
            android:text="亚马逊"
            android:gravity="center"
            android:textSize="18sp" />
        <RadioButton
            android:id="@+id/shop_type2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/state_checked"
            android:text="eBay"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="30dp"/>
        <RadioButton
            android:id="@+id/shop_type3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/state_checked"
            android:text="其他"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="30dp"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺信息名称"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入店铺信息名称"
        android:background="@drawable/frame_gray1"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺信息链接"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/shop_link"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入店铺信息连接"
        android:background="@drawable/frame_gray1"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺后台卖家地址"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/shop_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入店铺后台卖家地址"
        android:background="@drawable/frame_gray1"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺后台公司名称"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/backcompany_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入店铺后台公司名称"
        android:background="@drawable/frame_gray1"
        android:visibility="gone"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺主要经营范围"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/shop_business"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入店铺主要经营范围"
        android:background="@drawable/frame_gray1"
        android:layout_marginTop="10dp"/>
    <android.widget.Button
        android:id="@+id/tijiao"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/background_button1"
        android:textColor="#fff"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="50dp"
        android:text="提交"
        android:textSize="25sp"/>
</LinearLayout>

