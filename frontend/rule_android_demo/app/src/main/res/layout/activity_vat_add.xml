<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.Tax.AddVATActivity"
    android:background="#ffffff">
    <ImageButton
        android:id="@+id/vatdialog_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/dialog_close"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/vatdialog_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/vatadd_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/add_1"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择国家"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vatadd_1"/>
            <TextView
                android:id="@+id/vatadd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司\n名称:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_1"/>
            <EditText
                android:id="@+id/vatadd_cname"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:background="@drawable/frame_black"
                android:hint="请输入公司名称"
                android:layout_marginTop="45dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/vatadd_name"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_1"/>
            <TextView
                android:id="@+id/vatadd_vid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="税号\n国家:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_name"/>
            <HorizontalScrollView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/vatadd_vid"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_cname"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/radiogroup_vat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:checked="false"
                            android:text="英国"
                            android:textSize="18sp"
                            android:id="@+id/vatadd_yingguo"
                            android:textColor="#000000"/>
                        <RadioButton
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:checked="false"
                            android:text="德国"
                            android:textSize="18sp"
                            android:id="@+id/vatadd_deguo"
                            android:textColor="#000000"/>
                        <RadioButton
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:checked="false"
                            android:text="法国"
                            android:textSize="18sp"
                            android:id="@+id/vatadd_faguo"
                            android:textColor="#000000"/>
                        <RadioButton
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:checked="false"
                            android:text="意大利"
                            android:textSize="18sp"
                            android:id="@+id/vatadd_yidali"
                            android:textColor="#000000"/>
                        <RadioButton
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:checked="false"
                            android:text="西班牙"
                            android:textSize="18sp"
                            android:id="@+id/vatadd_xibanya"
                            android:textColor="#000000"/>
                    </RadioGroup>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="提示:请勾选已注册VAT税号的国家,否则会影响VAT归属国的判定，进而导致VAT计算不准确"
                android:textSize="18sp"
                android:textColor="#ff0000"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_vid"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/vatadd_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/add_2"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_vid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写税号信息"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/vatadd_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国家:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_2"/>
            <TextView
                android:id="@+id/vatadd_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="112dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_2"/>
            <TextView
                android:id="@+id/add_taxid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="税号:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="75dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_2"/>
            <EditText
                android:id="@+id/vatadd_tax"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:hint="请输入不超过16位数"
                android:background="@drawable/frame_black"
                android:layout_marginTop="73dp"
                android:layout_marginStart="65dp"
                app:layout_constraintStart_toStartOf="@+id/add_taxid"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="税率(%):"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="115dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_2"/>
            <Spinner
                android:id="@+id/vatadd_spinner"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:entries="@array/tax_rate"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_tax"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="150dp"/>
            <TextView
                android:id="@+id/vatadd_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申报规则:目的国"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="165dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申报周期:每个季度"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="195dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vatadd_2"/>
            <android.widget.Button
                android:id="@+id/vatadd_btn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="提交"
                android:layout_marginTop="240dp"
                android:background="@drawable/background_button1"
                android:textSize="20sp"
                android:textColor="#fff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vatadd_2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>