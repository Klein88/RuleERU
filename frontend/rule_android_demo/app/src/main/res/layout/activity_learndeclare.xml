<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Tl_learndeclare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="   "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_nav_back"></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VAT百科"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <android.widget.Button
                android:id="@+id/vat_encyclopedia_btn1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/mention_monochromatic"
                android:text="VAT相\n关知识"
                android:paddingLeft="20dp"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/frame_blue1"/>
            <android.widget.Button
                android:id="@+id/vat_encyclopedia_btn2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/mention_monochromatic"
                android:text="VAT申\n报流程"
                android:padding="20dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/frame_blue1"/>
        </LinearLayout>
        <android.widget.Button
            android:id="@+id/vat_encyclopedia_btn3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:drawableLeft="@drawable/presentation_monochromatic"
            android:text="什么是VAT"
            android:padding="20dp"
            android:textSize="16sp"
            android:textColor="#3478f6"
            android:layout_marginTop="5dp"
            android:background="@drawable/frame_blue1"/>
        <android.widget.Button
            android:id="@+id/vat_encyclopedia_btn4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:drawableLeft="@drawable/san_fransisco_flatline"
            android:text="什么是EPR"
            android:padding="20dp"
            android:textSize="16sp"
            android:textColor="#3478f6"
            android:layout_marginTop="5dp"
            android:background="@drawable/frame_blue1"/>
        <android.widget.Button
            android:id="@+id/vat_encyclopedia_btn5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:drawableLeft="@drawable/mention_monochromatic"
            android:text="什么是产品合规"
            android:padding="20dp"
            android:textSize="16sp"
            android:textColor="#3478f6"
            android:layout_marginTop="5dp"
            android:background="@drawable/frame_blue1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>