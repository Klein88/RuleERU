<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择公司注册地"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <RadioGroup
            android:id="@+id/rg_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <RadioButton
                android:id="@+id/company_type1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/state_checked"
                android:text="大陆公司"
                android:gravity="center"
                android:textSize="18sp" />
            <RadioButton
                android:id="@+id/company_type2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/state_checked"
                android:text="港台公司"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginStart="10dp"/>
            <RadioButton
                android:id="@+id/company_type3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/state_checked"
                android:text="其他公司"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginStart="10dp"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写公司名称并上传公司文件"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="95dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名称"
            android:textSize="18sp"
            android:layout_marginTop="135dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:id="@+id/epredit_cname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请填写公司名称"
            android:layout_marginTop="165dp"
            android:background="@drawable/frame_gray1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传公司营业执照"
            android:textSize="18sp"
            android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/epredit_img"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/upload"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epredit_cname"/>
        <LinearLayout
            android:id="@+id/epredit_preview"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/frame_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epredit_cname"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/epr_example1"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/zhizhao"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="示例"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写公司营业信息"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epredit_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业执照号码/注册号"
            android:textSize="18sp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/epredit_img"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/epredit_id"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="请输入营业执照号码/注册号"
            android:background="@drawable/frame_gray1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/epredit_img"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司成立日期"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/epredit_establish"
            app:layout_constraintStart_toStartOf="@+id/epredit_establish"/>
        <EditText
            android:id="@+id/epredit_establish"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="xxxx年xx月xx日"
            android:background="@drawable/frame_gray1"
            android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/epredit_img"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司经营注册地址邮编"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epredit_id"/>
        <EditText
            android:id="@+id/epredit_address"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:hint="请输入所在地址"
            android:layout_marginTop="35dp"
            android:background="@drawable/frame_gray1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epredit_id"/>
        <EditText
            android:id="@+id/epredit_code"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/frame_gray1"
            android:hint="邮政编码"
            app:layout_constraintStart_toEndOf="@+id/epredit_address"
            app:layout_constraintTop_toBottomOf="@+id/epredit_id" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司联系电话"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/epredit_id"
            app:layout_constraintStart_toStartOf="@+id/epredit_phone"/>
        <EditText
            android:id="@+id/epredit_phone"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:hint="联系电话"
            android:layout_marginTop="35dp"
            android:background="@drawable/frame_gray1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epredit_id"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司联系人邮箱"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epredit_address"/>
        <EditText
            android:id="@+id/epredit_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入公司联系人邮箱"
            android:layout_marginTop="35dp"
            android:background="@drawable/frame_gray1"
            app:layout_constraintTop_toBottomOf="@+id/epredit_address"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="EPR注册号："
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epredit_email"/>
        <EditText
            android:id="@+id/epredit_eprid"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="请输入EPR注册号"
            android:layout_marginTop="5dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/frame_gray1"
            app:layout_constraintTop_toBottomOf="@+id/epredit_email"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>