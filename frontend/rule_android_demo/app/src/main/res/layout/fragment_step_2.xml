<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择公司注册地"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <RadioGroup
        android:id="@+id/rg_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <RadioButton
            android:id="@+id/company_type1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/state_checked"
            android:text="大陆公司"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="10dp"/>
        <RadioButton
            android:id="@+id/company_type2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/state_checked"
            android:text="港台公司"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="10dp"/>
        <RadioButton
            android:id="@+id/company_type3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/state_checked"
            android:text="其他公司"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写公司名称并上传公司文件"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司名称"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请填写公司名称"
        android:background="@drawable/frame_gray1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传公司营业执照"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/license_img"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/upload"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/frame_blue"
            android:layout_marginStart="16dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/vat_img1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/zhizhao"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="示例"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写公司营业信息"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业执照号码/注册号"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司成立日期"
            android:textSize="18sp"

            android:layout_marginStart="55dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/register_id"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="请输入营业执照号码/注册号"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@drawable/frame_gray1" />

        <EditText
            android:id="@+id/establish"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/frame_gray1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司经营注册地址邮编"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司联系电话"
            android:textSize="18sp"
            android:layout_marginStart="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/company_address"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:hint="请输入所在地址"
            android:background="@drawable/frame_gray1" />
        <EditText
            android:id="@+id/post_code"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:hint="邮政编码"
            android:layout_marginStart="5dp"
            android:background="@drawable/frame_gray1" />
        <EditText
            android:id="@+id/phone"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:hint="公司联系电话"
            android:layout_marginStart="5dp"
            android:background="@drawable/frame_gray1" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司联系人邮箱"
        android:textSize="18sp"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/email_contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入公司联系人邮箱"
        android:background="@drawable/frame_gray1"
        android:layout_marginTop="5dp"/>

</LinearLayout>