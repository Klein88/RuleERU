<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Tljiaoshui_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_nav_back"
        app:title="编辑缴税">
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款公司"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/taxpayment_cname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="A公司"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="@drawable/frame_gray1"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴税信息"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待缴税总计"
            android:textSize="20sp"
            android:layout_marginTop="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/taxpayment_count"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="11111"
            android:textSize="20sp"
            android:layout_marginTop="153dp"
            android:layout_marginStart="110dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欧元"
            android:textSize="20sp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="税号"
            android:textSize="20sp"
            android:layout_marginTop="205dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:id="@+id/taxpayment_taxid"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:layout_marginTop="198dp"
            android:layout_marginStart="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TableLayout
            android:id="@+id/tb_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1"
            android:background="#000000"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@+id/taxpayment_taxid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginBottom="0.5dp"
                    android:background="#ffffffff"
                    android:text="申报周期"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="0.5dp"
                    android:background="#ffffffff"
                    android:gravity="center_vertical"
                    android:text="税金" />

            </TableRow>
            <TableRow>
                <Spinner
                    android:id="@id/declare_cycle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginBottom="3dp"
                    android:entries="@array/taxpay"
                    android:background="#ffffffff"/>
                <EditText
                    android:id="@+id/declare_money"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffffff" />
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款信息"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="340dp"
            android:textSize="26sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款客户"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="390dp"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/declare_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="收款客户"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="380dp"
            android:layout_marginStart="140dp"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款公司"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="450dp"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/declare_Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="收款公司"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="440dp"
            android:layout_marginStart="140dp"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <android.widget.Button
            android:id="@+id/declare_btn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="支付"
            android:background="@drawable/background_button1"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>