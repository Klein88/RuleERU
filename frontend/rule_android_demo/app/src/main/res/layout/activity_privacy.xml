<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Tl_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_nav_back"
        app:title="  ">
    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tl_privacy">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gdpr_1" />

    </androidx.cardview.widget.CardView>

    <android.widget.Button
        android:id="@+id/privacy_1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/frame_blue1"
        android:drawableLeft="@drawable/gdpr_3"
        android:padding="20dp"
        android:text="什么是GDPR? >"
        android:textColor="#3478f6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_click"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="15dp"
        android:background="@drawable/custom_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/privacy_1">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/img_1"
                android:background="@null"
                android:layout_width="133dp"
                android:layout_height="127dp"
                android:alpha="0.5"
                android:scaleType="centerCrop"
                android:src="@drawable/gdpr_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据隐私和   保护评估"
                android:textStyle="bold"
                android:textColor="#3478f6"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>