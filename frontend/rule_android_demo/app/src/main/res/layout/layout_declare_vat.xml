<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Tl_declarevat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_nav_back"
        app:title="计算税金">
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基础信息"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/frame_gray2"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报税国家："
                        android:textSize="18sp"
                        android:layout_marginStart="80dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/declare_country"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:text="法国"
                        android:textSize="18sp"
                        android:textColor="#4d7bd9"
                        android:gravity="center"
                        android:layout_marginStart="170dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VAT信息"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/frame_gray2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申报税号："
                        android:textSize="18sp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <EditText
                        android:id="@+id/declare_vatid"
                        android:layout_width="220dp"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:text="12345"
                        android:textSize="18sp"
                        android:layout_marginStart="150dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/frame_gray2"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本期VAT申报时间："
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/declare_now"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:text="2023年9月23日"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginStart="190dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/frame_gray2"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----------"
                        android:textSize="18sp"
                        android:layout_marginStart="120dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/declare_end"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:background="#cbcbcd"
                        android:text="2023年12月31日"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginStart="190dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/frame_gray2"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申报周期："
                        android:textSize="18sp"
                        android:layout_marginStart="85dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/declare_cycle"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:text="季度申报"
                        android:textColor="#4d7bd9"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginStart="190dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/frame_gray2"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="税率%"
                        android:textSize="18sp"
                        android:layout_marginStart="115dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/declare_rate"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:text="20.0000%"
                        android:textColor="#4d7bd9"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginStart="190dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传销售报告"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/declare_check1"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:text="OMP平台"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/state_checked"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <CheckBox
                        android:id="@+id/declare_check2"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:text="非OMP平台"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/state_checked"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/OMP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OMP平台销售额"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/OMP_Cons"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@drawable/frame_gray2"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OMP平台含税销售额"
                            android:textSize="18sp"
                            android:layout_marginTop="65dp"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(如:epay等其他代扣\n代缴平台"
                            android:textSize="18sp"
                            android:textColor="#ff0000"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="195dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#ffffff"
                        android:layout_marginStart="180dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="130dp"
                            android:text="请填写OMP平台含税\n销售额\n2,023年10月29日\n----\n2,023年12月31日"
                            android:textColor="#4d7bd9"
                            android:gravity="center_horizontal"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <EditText
                            android:id="@+id/declare_money1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="请输入金额"
                            android:gravity="center"
                            android:background="#eeeef0"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/omp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="非OMP平台销售额"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/omp_Cons"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:visibility="gone"
                    android:background="@drawable/frame_gray2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="非OMP平台含税销售额"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="80dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(如:epay等其他代扣\n代缴平台)"
                        android:textSize="18sp"
                        android:textColor="#ff0000"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="110dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <LinearLayout
                        android:layout_width="195dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#ffffff"
                        android:layout_marginStart="195dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="195dp"
                            android:layout_height="130dp"
                            android:text="请填写非OMP平台含税销售额\n2,023年10月29日\n----\n2,023年12月31日"
                            android:textColor="#4d7bd9"
                            android:gravity="center_horizontal"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <EditText
                            android:id="@+id/declare_money2"
                            android:layout_width="195dp"
                            android:layout_height="40dp"
                            android:hint="请输入金额"
                            android:gravity="center"
                            android:background="#eeeef0"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <android.widget.Button
                    android:id="@+id/btn_jisuan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_button1"
                    android:textColor="#fff"
                    android:text="开始算税"
                    android:textSize="20sp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>