<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#ffffff">
    <ImageButton
        android:id="@+id/epr_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/dialog_close"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="包装材料"
        android:textSize="22sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/epr_material"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入包装材料"
        android:textSize="22sp"
        android:background="#ffffff"
        android:layout_marginTop="50dp"
        android:layout_marginStart="145dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预估计重量"
        android:textSize="22sp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/epr_estimate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入预估计重量"
        android:textSize="22sp"
        android:background="#ffffff"
        android:layout_marginTop="90dp"
        android:layout_marginStart="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实际重量"
        android:textSize="22sp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/epr_actual"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入实际重量"
        android:textSize="22sp"
        android:background="#ffffff"
        android:layout_marginTop="130dp"
        android:layout_marginStart="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <android.widget.Button
        android:id="@+id/eprdeclare_addbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="新增"
        android:background="@drawable/background_button1"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>