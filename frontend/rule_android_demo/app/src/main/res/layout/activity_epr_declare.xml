<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Tleprshenbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_nav_back"
        app:title="EPR申报">
    </androidx.appcompat.widget.Toolbar>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="10dp">
           <TextView
               android:layout_width="160dp"
               android:layout_height="wrap_content"
               android:text="注册码"
               android:textSize="24sp"
               android:textStyle="bold"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="15dp"
               android:layout_marginTop="10dp"/>
           <EditText
               android:id="@+id/eprdeclare_id"
               android:layout_width="160dp"
               android:layout_height="70dp"
               android:background="@drawable/frame_gray1"
               android:hint="请输入注册码"
               android:textSize="18sp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="15dp"
               android:layout_marginTop="60dp"/>
           <TextView
               android:layout_width="160dp"
               android:layout_height="wrap_content"
               android:text="申报年份"
               android:textSize="24sp"
               android:textStyle="bold"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="@id/eprdeclare_year"
               android:layout_marginTop="10dp"/>
           <EditText
               android:id="@+id/eprdeclare_year"
               android:layout_width="160dp"
               android:layout_height="70dp"
               android:background="@drawable/frame_gray1"
               android:hint="请输入申报年份"
               android:textSize="18sp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="15dp"
               android:layout_marginTop="60dp"/>
           <TextView
               android:layout_width="355dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="品牌名"
               android:textSize="24sp"
               android:textStyle="bold"
               app:layout_constraintTop_toBottomOf="@+id/eprdeclare_id"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="15dp" />
           <EditText
               android:id="@+id/eprdeclare_brand"
               android:layout_width="355dp"
               android:layout_height="70dp"
               android:layout_marginTop="70dp"
               android:background="@drawable/frame_gray1"
               android:hint=" 请输入品牌名"
               android:textSize="18sp"
               app:layout_constraintTop_toBottomOf="@+id/eprdeclare_id"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="15dp" />
           <TextView
               android:id="@+id/declare_data"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="申报数据"
               android:layout_marginTop="10dp"
               android:layout_marginStart="15dp"
               android:textSize="24sp"
               android:textStyle="bold"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/eprdeclare_brand"/>
           <TableLayout
               android:id="@+id/tb_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:stretchColumns="0,1,2,3"
               android:background="#000000"
               android:layout_margin="15dp"
               app:layout_constraintTop_toBottomOf="@+id/declare_data"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               >
               <TableRow>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="1dp"
                       android:layout_marginLeft="1.5dp"
                       android:layout_marginRight="1dp"
                       android:layout_marginBottom="1dp"
                       android:background="#ffffffff"
                       android:text="申报序号" />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="1dp"
                       android:layout_marginLeft="0.5dp"
                       android:layout_marginRight="1dp"
                       android:layout_marginBottom="1dp"
                       android:background="#ffffffff"
                       android:text="包装材料" />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="1dp"
                       android:layout_marginLeft="0.5dp"
                       android:layout_marginRight="1dp"
                       android:layout_marginBottom="1dp"
                       android:background="#ffffffff"
                       android:text="预申报重量" />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="1dp"
                       android:layout_marginLeft="0.5dp"
                       android:layout_marginRight="1dp"
                       android:layout_marginBottom="1dp"
                       android:background="#ffffffff"
                       android:text="实际重量" />
               </TableRow>
           </TableLayout>
           <ImageButton
               android:id="@+id/eprdeclare_addrow"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:background="@drawable/eprdeclare_add"
               android:src="@drawable/baseline_add_24"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               app:layout_constraintTop_toBottomOf="@+id/tb_layout"
               app:layout_constraintEnd_toEndOf="parent"/>
           <android.widget.Button
               android:id="@+id/eprdeclare_btn"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:text="提交"
               android:background="@drawable/background_button1"
               android:textColor="#fff"
               android:textSize="25sp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="10dp"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
